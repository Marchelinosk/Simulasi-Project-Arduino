#include <LiquidCrystal_I2C.h>

int kolom = 16;
int baris = 2;

LiquidCrystal_I2C lcd(0x27, kolom, baris);  


void setup() 
{
  lcd.init();                      
  lcd.backlight();
}

void loop() 
{
  int i;  
  lcd.setCursor(0,0);
  lcd.print("Selamat Datang");
  lcd.setCursor(0,1);
  lcd.print("Marchelino Senduk Kaunang");
  for (i = 0 ; i < 16; i++) 
  {
    lcd.scrollDisplayRight(); 
    delay(200);
  } 

}
